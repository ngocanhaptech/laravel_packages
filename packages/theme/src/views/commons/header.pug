mixin header(className, page)
    +nav('navigation nav-left', page.menu, className)
        .header-right
            -
                const hotline = '<span type="button" data-toggle="modal" data-target=".bs-example-modal-sm">(024/028) 7302 8888</span>'
            +button('btn-sm btn-default btn-radius text-bold', hotline)
            +button('btn-sm btn-default btn-radius text-bold', 'Đăng nhập')
            +button('btn-sm btn-primary btn-solid btn-radius text-bold', 'Đăng ký dùng thử')