extends ../layouts/default
block main
    section.section-heading.section-testimonials.light-text
        h2.section-title.text-center: span BẢNG GIÁ DỊCH VỤ BIZFLY CLOUD SERVER
        div.section-description.text-center Chi phí tính đến từng giờ, bạn chỉ trả cho những gì thực tế sử dụng.
        div.section-description.text-center: strong  *Bảng giá chưa bao gồm 10% VAT
    section.section-services.section-gray
        .container
            .row
                //- .slide_pricing.slider-arrow.owl-carousel.owl-theme
                each item, index in [
                    { title: 'Micro', price: '209,686' },
                    { title: 'Tiny', price: '373,949' },
                    { title: 'Small', price: '469,234' },
                    { title: 'Medium', price: '650,558' },
                    { title: 'Large', price: '1,169,651' },
                    { title: 'Larger', price: '1,618,149' },
                    { title: 'ExtLarge', price: '3,816,916' },
                    { title: 'Huge', price: '4,268,117' }
                ]
                    .col-sm-3: +pricing_block('border-block price-block-' + index, item)  
            .text-center
                div Bạn mua số lượng lớn, ký hợp đồng dài hạn?
                div Liên hệ <a href="sales@bizflycloud.vn">sales@bizflycloud.vn</a> để có báo giá tốt hơn. 
    section.section-services
        h2.section-title.text-center: span Tùy chỉnh cấu hình
        div.section-description.text-center Quý khách hàng có thể lựa chọn kiểu cấu hình khác bằng cách tùy chỉnh cấu hình.
        .container
            .row
                .col-sm-7.form-custom-config.show-group-label
                    +cloud_server_options
                .col-sm-5.form-options-config
                    .block-body
                        .title Ước tính giá Cloud Server hàng tháng
                            div: small ( Giá chưa bao gồm 10% VAT )
                        .option-config-data Cấu hình: &nbsp; 
                            ul.text-primary
                                li
                                    span.cpu-value 2 
                                    span.cpu-unit &nbsp;Core(s) 
                                li
                                    span.ram-value 2 
                                    span.ram-unit GB 
                                    | RAM 
                                li
                                    span.root-disk-value 100 
                                    span.root-disk-unit GB 
                                    span.root-disk-type HDD
                                li
                                    span.data-disk-value 60 
                                    span.data-disk-unit &nbsp;GB 
                                    span.data-disk-type SSD
                        .form-group.text-center
                            button.btn.btn-sm.btn-second.btn-solid.btn-radius.text-bold Khởi tạo ngay
    .slider-sloud-server
        mixin cls-1
            .cls-mainslide-1
                .row.align-items-center
                    .col-sm-6
                        picture.title-image
                            img(src="/assets/images/banner/banner-km-t4-title.png", alt="khuyen-mai-t4")
                    .col-sm-6.d-none.d-sm-block
                        picture.slide-image
                            img(src="/assets/images/banner/banner-km-t4-image.png", alt="khuyen-mai-t4")
        mixin cls-2
            .cls-mainslide-2
                .row.align-items-center
                    .col-sm-6
                        picture.title-image(style="max-width: 360px")
                            img(src="/assets/images/banner/cloud-server-pay-as-you-go.svg", alt="pay-as-you-go")
                        .slide-button
                            span.btn.btn-md.btn-second.btn-solid.btn-radius.text-bold Đăng ký dùng thử
                    .col-sm-6.d-none.d-sm-block
                        picture.slide-image
                            img(src="/assets/images/banner/pay-as-you-go-2.svg", alt="pay-as-you-go", style="width: 100%")
        mixin cls-3
            .cls-mainslide-3
                .row.align-items-center
                    .col-sm-6
                        picture.title-image(style="max-width: 360px")
                            img(src="/assets/images/banner/users-t8-2019.svg", alt="users-t8-2019")
                        .slide-button
                            span.btn.btn-md.btn-second.btn-solid.btn-radius.text-bold Đăng ký dùng thử
                    .col-sm-6.d-none.d-sm-block
                        picture.slide-image
                            img(src="/assets/images/banner/users-t8-2019-2.svg", alt="users-t8-2019", style="width: 100%")
        
        +slider_single(cloud_server_slider, 'owl-theme','layout-slide-item', 'container slide-item')
    
    section.section-benefits
        h2.section-title.text-center: span Ưu đãi X4
        .container
            .row.benefits-body
                each item, index in [
                    {
                        title: 'Miễn phí 01 IP với mỗi server'
                    },
                    {
                        title: 'Miễn phí cài đặt VestaCP'
                    },
                    {
                        title: 'Miễn phí dịch vụ khôi phục dữ liệu'
                    },
                    {
                        title: 'Miễn phí cảnh báo bảo mật'
                    }
                ]
                    - item.icon = '/assets/images/cloud-server-pricing/x4-icon-' + (index + 1)
                    .col-sm-3
                        .block-item
                            .block-header
                                .bf-icon: img(src=item.icon + '.svg', alt=item.title)
                                .bf-icon.bf-icon-hover: img(src=item.icon + '.svg', alt=item.title)
                            .block-body
                                .title=item.title
block append styleLibs
    link(rel="stylesheet", href="/assets/OwlCarousel2/assets/owl.carousel.min.css")
    link(rel="stylesheet", href="/assets/OwlCarousel2/assets/owl.theme.default.min.css")
block append styles
    //- nouislider    
    link(rel="stylesheet", href="/assets/nouislider/nouislider.min.css")
    link(rel="stylesheet", href="/assets/css/pages/cloud-server_page.css")
block append scripts
    script(src="/assets/OwlCarousel2/owl.carousel.min.js")
    script(src="/assets/nouislider/nouislider.min.js")