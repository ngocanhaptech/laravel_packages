extends ../layouts/default
block main
    .slider-sloud-server
        mixin cls-mainslide-1
            .cls-mainslide-1
                .row.align-items-center
                    .col-sm-6
                        picture.title-image
                            img(src="/assets/images/banner_home/banner-km-t4-title.png", alt="khuyen-mai-t4")
                    .col-sm-6.d-none.d-sm-block
                        picture.slide-image
                            img(src="/assets/images/banner_home/banner-km-t4-image.png", alt="khuyen-mai-t4")
        mixin cls-mainslide-2
            .cls-mainslide-2
                .row.align-items-center
                    .col-sm-6
                        picture.title-image(style="max-width: 360px")
                            img(src="/assets/images/banner_home/cloud-server-pay-as-you-go.svg", alt="pay-as-you-go")
                        .slide-button
                            span.btn.btn-md.btn-second.btn-solid.btn-radius.text-bold Đăng ký dùng thử
                    .col-sm-6.d-none.d-sm-block
                        picture.slide-image
                            img(src="/assets/images/banner_home/pay-as-you-go-2.svg", alt="pay-as-you-go", style="width: 100%")
        mixin cls-mainslide-3
            .cls-mainslide-3
                .row.align-items-center
                    .col-sm-6
                        picture.title-image(style="max-width: 360px")
                            img(src="/assets/images/banner_home/users-t8-2019.svg", alt="users-t8-2019")
                        .slide-button
                            span.btn.btn-md.btn-second.btn-solid.btn-radius.text-bold Đăng ký dùng thử
                    .col-sm-6.d-none.d-sm-block
                        picture.slide-image
                            img(src="/assets/images/banner_home/users-t8-2019-2.svg", alt="users-t8-2019", style="width: 100%")
        
        +slider_single(cloud_server_slider, 'owl-theme','layout-slide-item', 'container slide-item')
    section.section-partners
        h2.section-title.text-center: span KHÁCH HÀNG TIN DÙNG BIZFLY CLOUD SERVER
        .container.our-partners
            +slider_partners(cloudServerPartners)
    section.section-services
        h2.section-title.text-center: span Trải nghiệm miễn phí
        div.section-description.text-center Quý khách hàng có thể dùng thử sản phẩm <strong>Cloud Server</strong> bằng một trong hai cách: Chọn cấu hình dùng thử có sẵn hoặc tuỳ chỉnh cấu hình dùng thử.
        .container
            .row
                .col-sm-5.form-options-config.align-self-start
                    .title CẤU HÌNH DÙNG THỬ CÓ SẴN
                    .block-body
                        p
                            | Cấu hình:
                            span.text-primary &nbsp;2 Core(s) - 2GB RAM - 100GB HDD + 60GB SSD
                        ul
                            li Sử dụng được mọi tính năng
                            li Khởi tạo nhanh chóng
                            li An toàn - Bảo mật cao
                        .form-group
                            button.btn.btn-sm.btn-second.btn-solid.btn-radius Khởi tạo ngay
                .col-sm-7.form-custom-config
                    .title TÙY CHỈNH CẤU HÌNH DÙNG THỬ
                    +cloud_server_options
    section.section-services.section-gray
        h2.section-title.text-center: span Bảng giá dịch vụ
        div.section-description.text-center *Bảng giá chưa bao gồm 10% VAT
        
block append styleLibs
    link(rel="stylesheet", href="/assets/OwlCarousel2/assets/owl.carousel.min.css")
    link(rel="stylesheet", href="/assets/OwlCarousel2/assets/owl.theme.default.min.css")
block append styles
    //- nouislider    
    link(rel="stylesheet", href="/assets/nouislider/nouislider.min.css")
    link(rel="stylesheet", href="/assets/css/pages/cloud-server_page.css")
block append scripts
    script(src="/assets/OwlCarousel2/owl.carousel.min.js")
    script(src="/assets/nouislider/nouislider.min.js")