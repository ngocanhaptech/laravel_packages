include ../variables
include ../mixins
<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        block title
            title=page.title
        block styles
            link(rel="stylesheet", href="/assets/bootstrap-4.4.1/css/bootstrap.min.css")
            link(rel="stylesheet", href="/assets/css/theme.css")
    body
        block top
            +top
        block header
            +header('fix-top', page)
        block main
            h1=(page.title + ' page').toUpperCase()
            p content Layouts
            +button('Đăng ký')
            p Default content
        block footer
            +footer
        block scripts
            script(src="/assets/jquery/jquery-3.2.1.min.js")
            script(src="/assets/bootstrap-4.4.1/js/bootstrap.min.js")
            script(src="/assets//js/app.js")