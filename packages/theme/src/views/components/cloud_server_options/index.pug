include input_range
include ../../elements/switch
mixin cloud_server_options
    .cloud_server_options.form
        .group-label
            .title
                +icon('md', '/assets/images/icons/icon-ram.svg')
                span Cấu hình RAM/CPU

        .form-group
            .row
                .col-auto.col-label
                    label CPU
                .col-auto.col-input
                    +input_range('fcpu')
        .form-group.row
                .col-auto.col-label
                    label RAM
                .col-auto.col-input
                    +input_range('fram')

        .group-label
            .title
                +icon('md', '/assets/images/icons/icon-disk.svg')
                span Cấu hình Volume (DISK)
        .form-group
            .row
                .col-auto.col-label
                    label ROOT DISK TYPE
                .col-auto.col-input
                    +switch('frootdisktype')
        .form-group
            .row
                .col-auto.col-label
                    label ROOT DISK
                .col-auto.col-input
                    +input_range('frootdisksize')
                        span.label_disk_type.frootdisk_label HDD
        .form-group
            .row
                .col-auto.col-label
                    label DATA DISK
                .col-auto.col-input
                    +input_range('fdatadisk')
                        span.label_disk_type#fdatadisktype SSD
        .option-config-data Cấu hình: &nbsp; 
            span.text-primary
                span.cpu-value 2 
                span.cpu-unit &nbsp;Core(s) 
                | - 
                span.ram-value 2 
                span.ram-unit GB 
                | RAM -  
                span.root-disk-value 100 
                span.root-disk-unit GB 
                span.root-disk-type HDD
                | &nbsp;+ 
                span.data-disk-value 60 
                span.data-disk-unit &nbsp;GB 
                span.data-disk-type SSD
        block