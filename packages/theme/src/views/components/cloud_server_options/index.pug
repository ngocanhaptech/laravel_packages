include input_range
include ../../elements/switch
mixin cloud_server_options
    .cloud_server_options.form
        .form-group
            .row
                .col-auto.col-label
                    label CPU
                .col-auto.col-input
                    +input_range('fcpu')
        .form-group.row
                .col-auto.col-label
                    label RAM
                .col-auto.col-input
                    +input_range('fram')
        .form-group
            .row
                .col-auto.col-label
                    label ROOT DISK TYPE
                .col-auto.col-input
                    +switch('frootdisktype')
        .form-group
            .row
                .col-auto.col-label
                    label ROOT DISK
                .col-auto.col-input
                    +input_range('frootdisksize')
                        span.label_disk_type.frootdisk_label HDD
        .form-group
            .row
                .col-auto.col-label
                    label DATA DISK
                .col-auto.col-input
                    +input_range('fdatadisk')
                        span.label_disk_type#fdatadisktype SSD
        .option-config-data Cấu hình: &nbsp; 
            span.text-primary
                span.cpu-value 2 
                span.cpu-unit &nbsp;Core(s) 
                | - 
                span.ram-value 2 
                span.ram-unit GB 
                | RAM -  
                span.root-disk-value 100 
                span.root-disk-unit GB 
                span.root-disk-type HDD
                | &nbsp;+ 
                span.data-disk-value 60 
                span.data-disk-unit &nbsp;GB 
                span.data-disk-type SSD
        .form-group
            .text-center: button.btn.btn-sm.btn-second.btn-solid.btn-radius.text-bold Khởi tạo ngay