include input_range
include switch
mixin cloud_server_options
    .cloud_server_options.form
        .form-group
            .row
                .col-4
                    label CPU
                .col-8
                    +input_range('fcpu')
        .form-group.row
                .col-4
                    label RAM
                .col-8
                    +input_range('fram')
        .form-group
            .row
                .col-4
                    label ROOT DISH TYPE
                .col-8
                    +switch('frootdisktype')
        .form-group
            .row
                .col-4
                    label ROOT DISH
                    span.frootdisk_label HDD
                .col-8
                    +input_range('frootdisksize')
        .form-group
            .row
                .col-4
                    label DATA DISH
                    span.frootdisk_label SSD
                .col-8
                    +input_range('fdatadisk')
        .form-group
            .text-center: button.btn.btn-second.btn-solid.btn-radius(style="padding: .375rem .175rem") Khởi tạo ngay