mixin block_content(className, _item)
    -
        const item = _item || {
            title: 'BizFly Cloud Server',
            description: 'Khởi tạo nhanh chóng, cấu hình mạnh mẽ, thay đổi linh hoạt, cung cấp toàn quyền điều khiển cho người dùng.',
            icon: '/assets/images/logo-servies/cloud-service.png'
        }
    .block-content(class=className)
        .block-head.p2
            if(item.icon)
                a(href="/cloud-server").cover: img( src=item.icon alt=item.title)
        .block-body.p2
            a(href="/cloud-server").title=item.title
            p=item.description
        .block-footer.p2.mt-auto
            block
mixin block_floaticon(className, _item)
    -
        const item = _item || {
            title: 'Hạ tầng mạnh mẽ',
            description: 'Ổ SSD tiêu chuẩn Data Center Tier III, mạng kết nối 10Gbps..',
