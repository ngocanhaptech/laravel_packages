                <defs>
                  <style>
                    .a {
                      fill: none;
                      stroke: #000;
                      stroke-linecap: round;
                      stroke-linejoin: round;
                      stroke-width: 2px;
                    }
                  </style>
                </defs>
                <rect class="a" x="15.5" y="15.5" width="16" height="16" rx="2" ry="2"></rect>
                <rect class="a" x="20.5" y="20.5" width="6" height="6"></rect>
                <line class="a" x1="20.5" y1="12.5" x2="20.5" y2="15.5"></line>
                <line class="a" x1="26.5" y1="12.5" x2="26.5" y2="15.5"></line>
                <line class="a" x1="20.5" y1="31.5" x2="20.5" y2="34.5"></line>
                <line class="a" x1="26.5" y1="31.5" x2="26.5" y2="34.5"></line>
                <line class="a" x1="31.5" y1="20.5" x2="34.5" y2="20.5"></line>
                <line class="a" x1="31.5" y1="25.5" x2="34.5" y2="25.5"></line>
                <line class="a" x1="12.5" y1="20.5" x2="15.5" y2="20.5"></line>
